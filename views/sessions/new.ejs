<h2>Login</h2>

<form method="POST" action="/login">
    <div class="field">
        <label for="login">Login:</label><br/>
        <input type="text" id="login" name="login" size="30"></input>
    </div>
    <div class="field">
        <label for="password">Password:</label><br/>
        <input type="password" id="password" name="password" size="30"></input>
    </div>
    <div class="actions">
        <button type="submit" value="Login">Enviar</button>
    </div>
</form>